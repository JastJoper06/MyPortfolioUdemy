@model MyPortfolioUdemy.Models.ViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<style>
    .card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        width: 100%;
        max-width: 300px;
        text-align: center;
        transition: transform 0.3s;
        overflow: hidden;
        margin: auto;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-header {
        position: relative;
        height: 150px;
    }

        .card-header img.cover {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .card-header img.avatar {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            border: 3px solid #fff;
            position: absolute;
            bottom: -35px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #fff;
            object-fit: cover;
        }

    .card-body {
        padding-top: 45px; /* Avatar için yukarıdan boşluk bırak */
        padding-bottom: 20px;
    }

    .card-footer {
        padding: 10px;
        border-top: 1px solid #eee;
    }
</style>

<div class="container mt-5 pt-5">
    <h2 class="mb-4 text-center">Projelerim</h2>
    <div class="row justify-content-center">
        @foreach (var item in Model.Portfolios)
        {
            <div class="col-md-4 mb-4 d-flex justify-content-center">
                <div class="card">
                    <div class="card-header">
                        <img src="@item.ImageUrl" alt="Cover" class="cover">
                        <img src="https://i.hizliresim.com/8529o3q.jpg" alt="Avatar" class="avatar">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.SubTitle</p>
                    </div>
                    <div class="card-footer">
                        <a href="@item.Url" class="btn btn-outline-primary btn-sm">Github</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- ToDo Listesi Tablo -->
<div class="task-table">
    <h4 class="mb-4">Yapılacaklar</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Görev</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ToDoLists)
            {
                <tr>
                    <td>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox">
                        </div>
                    </td>
                    <td>@item.Title</td>
                    <td>
                        <button type="button" data-toggle="tooltip" title="Düzenle" class="btn btn-sm btn-primary">
                            <i class="la la-edit"></i>
                        </button>
                        <button type="button" data-toggle="tooltip" title="Sil" class="btn btn-sm btn-danger">
                            <i class="la la-times"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
